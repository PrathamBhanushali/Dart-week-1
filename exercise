void main(){
  
  //1. printing values
  
  String firstName = "sagar";
  var lastName = "patel";
  int age = 36;
  double height = 1.84;
  
  print(firstName);
  print(lastName);
  print(age);
  print(height);
  
  //2. string interpolation
  
  double temperature=20;
  int value = 2;
  String pizza = 'pizza';
  String pasta = 'pasta';
  
  print("The temperature is $temperature""C");
  print("$value plus $value makes ${value + value}");
  print("I like $pizza and $pasta");
  
  //3. palindrome
  
  String name="dad";
  String name1=name.split("").reversed.join("");
  
  if(name == name1){
    print("The string is palindrome");
  }
  else{
    print("The string is not palindrome");
  }
  
  //4. Lowercase and uppercase
  
 String title = "Dart course";
   
   print(title);
  print(title.toUpperCase());
  print(title.toLowerCase());
  
  //5. first char capitalized
  
  String title = 'dart course';
  print("${title[0].toUpperCase()}""${title.substring(1)}");
  
  //6. substring
  
  String title = "Helloworld";
  print(title.substring(3,7));
  
}
